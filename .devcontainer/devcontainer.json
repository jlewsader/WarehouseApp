{
  "name": "Fedora Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "remoteUser": "vscode",
"runArgs": [
  "--userns=keep-id",
  "--security-opt=label=disable",
  "--network=host"
],
  "forwardPorts": [3000]
}
